<h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%=dose.description%> of <%= dose.ingredient.name %>
        <%= link_to dose_path(dose.id),
        method: :delete,
        data: {confirm: "Are you sure?"} do %>
          <i class = "fas fa-trash-alt"></i>
        <% end %>
        </li>
    <% end %>
</ul>

<%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient%>
    <%= f.input :description %>
    <%= f.submit "Add doses and ingredients", class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to "All cocktails", cocktails_path, class: 'btn btn-primary' %>
<br>
<br>
<%= link_to "Delete cocktail", cocktail_path(@cocktail.id), class: 'btn btn-primary',
method: :delete,
data: {confirm: "Are you sure?"} %><br>

